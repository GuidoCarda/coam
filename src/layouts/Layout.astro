---
import { ViewTransitions } from "astro:transitions";
import "@fontsource/vt323";
import NavBar from "../components/NavBar.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/icons/cup.webp" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <main class="max-w-screen-lg mx-auto px-4 lg:px-0">
      <NavBar />
      <slot />
      <footer class="h-16 text-lg flex items-center justify-center">
        <span
          >Hecho por <a
            class="border-b-2 border-transparent hover:border-black transition-colors"
            target="_blank"
            href="https://github.com/joaquinvesapa">Joaquin</a
          > y <a
            class="border-b-2 border-transparent hover:border-black transition-colors"
            target="_blank"
            href="https://github.com/guidocarda">Guido</a
          > con â™¥
        </span>
      </footer>
    </main>
    <style is:global>
      html {
        font-family: "VT323", monospace;
        scrollbar-gutter: stable;
      }
      input[type="number"]::-webkit-inner-spin-button,
      input[type="number"]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
      }

      input[type="number"] {
        -moz-appearance: textfield;
      }
      input[type="number"]:focus {
        outline: none;
      }
    </style>
  </body>
</html>
